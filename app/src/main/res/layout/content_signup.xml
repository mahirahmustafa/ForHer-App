<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_signup" tools:context="com.forher.forher.SignupActivity"
    android:orientation="vertical"
    android:background="@color/weclome_bg">
    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/signup_email"
        android:background="@color/white"
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"/>
    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/signup_username"
        android:background="@color/white"
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"/>

    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/signup_dob"
        android:background="@color/white"
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"/>



    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/signup_pwd"
        android:inputType="textPassword"
        android:background="@color/white"
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"/>
    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/signup_cnfrmpwd"
        android:inputType="textPassword"
        android:background="@color/white"
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"/>
    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/signup_phone"
        android:background="@color/white"
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sex:"
            android:layout_weight="1"
            android:layout_gravity="right"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/signup_radiogrp">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:checked="true"
                android:id="@+id/m_radiobtn"
                android:layout_weight="1"/>


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:id="@+id/f_radiobtn"
                android:layout_weight="1"/>
        </RadioGroup>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup_button"
        android:text="SIGNUP"
        android:layout_gravity="center"/>

</LinearLayout>
